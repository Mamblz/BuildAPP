<Window x:Class="DesktopProgram.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:DesktopProgram.ViewModels"
        Title="Смена пароля" Height="400" Width="380"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f0f2f5">

    <!-- DataContext будет задаваться в code-behind через конструктор -->

    <Grid>
        <Border Background="White" Padding="20" Margin="20" CornerRadius="15">
            <StackPanel>
                <TextBlock Text="Смена пароля"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0 0 0 20"
                           HorizontalAlignment="Center"
                           Foreground="#333"/>

                <TextBlock Text="Старый пароль:" Margin="0,0,0,5" Foreground="#444"/>
                <PasswordBox x:Name="OldPasswordBox" Margin="0,0,0,10" Padding="6" PasswordChanged="OldPasswordBox_PasswordChanged"/>

                <TextBlock Text="Новый пароль:" Margin="0,0,0,5" Foreground="#444"/>
                <PasswordBox x:Name="NewPasswordBox" Margin="0,0,0,10" Padding="6" PasswordChanged="NewPasswordBox_PasswordChanged"/>

                <TextBlock Text="Повторите новый пароль:" Margin="0,0,0,5" Foreground="#444"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,20" Padding="6" PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Отмена"
                            Width="100"
                            Height="35"
                            Background="#888"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Margin="0,0,10,0"
                            Command="{Binding CancelCommand}"/>
                    <Button Content="Сохранить"
                            Width="100"
                            Height="35"
                            Background="#4A90E2"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Command="{Binding SaveCommand}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
