<Window x:Class="DesktopProgram.Views.ChangeEmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Смена Email" Height="350" Width="380"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f0f2f5">
    <Grid>
        <Border Background="White" Padding="20" Margin="20" CornerRadius="15">
            <StackPanel>
                <TextBlock Text="Смена Email"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0 0 0 20"
                           HorizontalAlignment="Center"
                           Foreground="#333"/>

                <TextBlock Text="Текущий Email:" Margin="0,0,0,5" Foreground="#444"/>
                <TextBox x:Name="CurrentEmailTextBox"
                         IsReadOnly="True"
                         Background="#eaeaea"
                         Padding="6"
                         Margin="0,0,0,10"/>

                <TextBlock Text="Новый Email:" Margin="0,0,0,5" Foreground="#444"/>

                <Grid Margin="0,0,0,20">
                    <TextBox x:Name="NewEmailTextBox"
         x:FieldModifier="public"
         Padding="6"
         VerticalContentAlignment="Center"
         TextChanged="NewEmailTextBox_TextChanged"/>


                    <TextBlock x:Name="PlaceholderTextBlock"
                               Text="example@example.com"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               Foreground="#999"
                               IsHitTestVisible="False"
                               Visibility="Visible"/>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Отмена"
                            Width="100"
                            Height="35"
                            Background="#888"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Margin="0,0,10,0"
                            Click="Cancel_Click"/>
                    <Button Content="Сохранить"
                            Width="100"
                            Height="35"
                            Background="#4A90E2"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Click="Save_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
