<UserControl x:Class="DesktopProgram.Views.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f0f2f5"
             MinWidth="700" MinHeight="600">

    <UserControl.Resources>
        <Style x:Key="NavLinkStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#4A90E2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#4A90E2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="20"
                            SnapsToDevicePixels="True">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A90E2"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                                <Setter Property="BorderBrush" Value="#357ABD"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#E5E5E5"/>
                                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#AAAAAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0 0 0 20">
            <TextBlock x:Name="GreetingText" FontSize="22" FontWeight="Bold" Foreground="#333" TextAlignment="Center" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 15 0 0">
                <Button Content="Постройки" Click="LoadBuildings_Click" Style="{StaticResource NavLinkStyle}"/>
                <Button Content="Ресурсы" Click="LoadResources_Click" Style="{StaticResource NavLinkStyle}"/>
                <Button Content="Профиль" Click="ShowUserProfile_Click" Style="{StaticResource NavLinkStyle}"/>
                <Button Content="Выход" Click="Logout_Click" Style="{StaticResource NavLinkStyle}"/>
            </StackPanel>
        </StackPanel>

        <!-- Панель ресурсов и заданий -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 20">
            <Border Background="White" CornerRadius="12" Padding="15" Width="320" Margin="10">
                <StackPanel>
                    <TextBlock Text="Ресурсы" FontWeight="SemiBold" FontSize="18" Margin="0 0 0 10" TextAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0" >
                            <TextBlock Text="💰" FontSize="20" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock x:Name="GoldText" Text="0" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0" >
                            <TextBlock Text="🌲" FontSize="20" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock x:Name="WoodText" Text="0" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0" >
                            <TextBlock Text="⛰︎" FontSize="20" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock x:Name="StoneText" Text="0" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="12" Padding="15" Width="320" Margin="10">
                <StackPanel>
                    <TextBlock Text="Активные задания" FontWeight="SemiBold" FontSize="18" Margin="0 0 0 10" TextAlignment="Center"/>
                    <TextBlock x:Name="ActiveTasksText" Text="0 заданий" FontSize="16" HorizontalAlignment="Center" Margin="0 5 0 10"/>
                    <Button Content="Перейти к заданиям" Width="180" HorizontalAlignment="Center" Click="GoToTasks_Click" Style="{StaticResource NavLinkStyle}" />
                </StackPanel>
            </Border>
        </StackPanel>


        <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="20" Width="660" HorizontalAlignment="Center" Margin="0 0 0 20">
            <StackPanel>
                <TextBlock Text="Статистика" FontWeight="SemiBold" FontSize="18" Margin="0 0 0 15" TextAlignment="Center"/>
                <TextBlock x:Name="StatsText" FontSize="14" Foreground="#555" TextAlignment="Center"/>
            </StackPanel>
        </Border>


        <ContentControl Grid.Row="3" x:Name="ContentArea" />


        <StackPanel Grid.Row="4" HorizontalAlignment="Center" Margin="0 20 0 0" Width="660">
            <Border Background="White" CornerRadius="12" Padding="15" Margin="0 0 0 10">
                <StackPanel>
                    <TextBlock Text="Новости" FontWeight="SemiBold" FontSize="18" Margin="0 0 0 10"/>
                    <TextBlock x:Name="NewsText" Text="Цены на древесину взлетели вверх!" TextWrapping="Wrap" Foreground="#555"/>
                </StackPanel>
            </Border>

            <DockPanel LastChildFill="False">
                <TextBlock x:Name="ServerTimeText" DockPanel.Dock="Left" FontSize="14" Foreground="#666" VerticalAlignment="Center" />
                <Button DockPanel.Dock="Right" Content="Обновить данные" Width="140" Height="30" Click="RefreshData_Click" Style="{StaticResource NavLinkStyle}"/>
            </DockPanel>
        </StackPanel>

    </Grid>
</UserControl>
