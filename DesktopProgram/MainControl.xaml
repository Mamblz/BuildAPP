<UserControl x:Class="DesktopProgram.Views.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f0f2f5">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Статус построек"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0 0 0 20"
                       Foreground="#222"
                       HorizontalAlignment="Center"/>

            <Button Content="Профиль пользователя"
                    Width="180"
                    Height="44"
                    Margin="0 0 0 30"
                    Background="#4A90E2"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="UserProfileButton_Click"/>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="600">
                <WrapPanel x:Name="BuildingsPanel" HorizontalAlignment="Center" ItemWidth="300" ItemHeight="250" Margin="0">
                    <!-- Постройки будут добавляться динамически -->
                </WrapPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
