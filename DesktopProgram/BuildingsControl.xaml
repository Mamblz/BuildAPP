<UserControl x:Class="DesktopProgram.Views.BuildingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DesktopProgram.Views"
             xmlns:conv="clr-namespace:DesktopProgram.Converters"
             Background="#fafbfc" Padding="15">

    <UserControl.Resources>
        <conv:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />
    </UserControl.Resources>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 0 15" VerticalAlignment="Center">

            <Button Content="Обновить" Width="100" Height="32" Click="RefreshBuildings_Click" Margin="0,0,10,0"/>
            <Button Content="Добавить здание" Width="140" Height="32" Click="AddBuilding_Click" Margin="0,0,10,0"/>

            <Grid Width="180" Height="28" Margin="0,0,10,0">
                <TextBox x:Name="DeleteBuildingNameTextBox" VerticalContentAlignment="Center" />

                <TextBlock Text="Название здания для удаления"
                           IsHitTestVisible="False"
                           Foreground="Gray"
                           Margin="5,0,0,0"
                           VerticalAlignment="Center"
                           Visibility="{Binding Text.IsEmpty, ElementName=DeleteBuildingNameTextBox, Converter={StaticResource IntToVisibilityConverter}}" />
            </Grid>

            <Button Content="Удалить здание" Width="120" Height="32" Click="DeleteBuilding_Click"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <WrapPanel x:Name="BuildingsPanel" HorizontalAlignment="Center" ItemWidth="320" ItemHeight="320" Margin="0" />
        </ScrollViewer>
    </DockPanel>
</UserControl>
