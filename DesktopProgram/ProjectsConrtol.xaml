<UserControl x:Class="DesktopProgram.Views.ProjectsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DesktopProgram.Views"
             Height="Auto" Width="Auto">
    <ScrollViewer>
        <ItemsControl x:Name="ProjectsList">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Status}" />
                            <TextBlock Text="Бюджет: " FontWeight="Bold" />
                            <TextBlock Text="{Binding Budget}" />
                            <TextBlock Text="Ресурсы: " FontWeight="Bold" />
                            <TextBlock Text="{Binding ResourceUsage}" />
                            <TextBlock Text="Срок: " FontWeight="Bold" />
                            <TextBlock Text="{Binding Timeline}" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
