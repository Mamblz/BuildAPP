<UserControl x:Class="DesktopProgram.Views.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f0f2f5">

    <Border Background="White" Padding="30" CornerRadius="16" Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <TextBlock Text="Вход" FontSize="28" FontWeight="Bold" Foreground="#222" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock Text="Логин" FontWeight="SemiBold" Margin="5,0,0,5" Foreground="#555"/>
            <Border Background="#f5f5f5" BorderBrush="#ccc" BorderThickness="1" CornerRadius="8" Margin="0,0,0,15" Height="40">
                <TextBox x:Name="LoginTextBox" Background="Transparent" BorderThickness="0" Padding="10" FontSize="14" Foreground="#333"/>
            </Border>

            <TextBlock Text="Пароль" FontWeight="SemiBold" Margin="5,0,0,5" Foreground="#555"/>
            <Border Background="#f5f5f5" BorderBrush="#ccc" BorderThickness="1" CornerRadius="8" Margin="0,0,0,15" Height="40">
                <PasswordBox x:Name="PasswordBox" Background="Transparent" BorderThickness="0" Padding="10" FontSize="14" Foreground="#333"/>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button Content="Войти" Width="130" Height="40" Margin="0,0,10,0" Click="LoginButton_Click"/>
                <Button Content="Регистрация" Width="130" Height="40" Click="RegisterButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>