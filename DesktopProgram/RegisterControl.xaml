<UserControl x:Class="BuildFlowApp.Views.RegisterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f0f2f5">
    <Border Background="White" Padding="30" Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <TextBlock Text="Регистрация" FontSize="28" FontWeight="Bold" Foreground="#222" HorizontalAlignment="Center" Margin="0,0,0,30"/>
            <TextBlock Text="Имя пользователя" FontWeight="SemiBold" Margin="5,0,0,5" Foreground="#555"/>
            <Border Background="#f5f5f5" BorderBrush="#ccc" BorderThickness="1" Margin="0,0,0,15" Height="40">
                <TextBox x:Name="UsernameTextBox" Background="Transparent" BorderThickness="0" Padding="10" FontSize="14" Foreground="#333"/>
            </Border>
            <TextBlock Text="Email" FontWeight="SemiBold" Margin="5,0,0,5" Foreground="#555"/>
            <Border Background="#f5f5f5" BorderBrush="#ccc" BorderThickness="1" Margin="0,0,0,15" Height="40">
                <TextBox x:Name="EmailTextBox" Background="Transparent" BorderThickness="0" Padding="10" FontSize="14" Foreground="#333"/>
            </Border>
            <TextBlock Text="Пароль" FontWeight="SemiBold" Margin="5,0,0,5" Foreground="#555"/>
            <Border Background="#f5f5f5" BorderBrush="#ccc" BorderThickness="1" Margin="0,0,0,15" Height="40">
                <PasswordBox x:Name="PasswordBox" Background="Transparent" BorderThickness="0" Padding="10" FontSize="14" Foreground="#333"/>
            </Border>
            <TextBlock Text="Повторите пароль" FontWeight="SemiBold" Margin="5,0,0,5" Foreground="#555"/>
            <Border Background="#f5f5f5" BorderBrush="#ccc" BorderThickness="1" Margin="0,0,0,15" Height="40">
                <PasswordBox x:Name="ConfirmPasswordBox" Background="Transparent" BorderThickness="0" Padding="10" FontSize="14" Foreground="#333"/>
            </Border>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button Content="Назад" Width="130" Height="40" Margin="0,0,10,0" Click="BackButton_Click"/>
                <Button Content="Зарегистрироваться" Width="160" Height="40" Click="RegisterButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>