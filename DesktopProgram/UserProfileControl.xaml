<UserControl x:Class="DesktopProgram.Views.UserProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f0f2f5">
    <Grid Margin="30" Width="400">
        <Border Background="White" Padding="25" CornerRadius="20">
            <StackPanel>

                <TextBlock Text="Профиль пользователя"
                           FontSize="28"
                           FontWeight="Bold"
                           Margin="0 0 0 30"
                           HorizontalAlignment="Center"
                           Foreground="#333"/>

                <TextBlock Text="Имя пользователя:" 
                           FontWeight="SemiBold" 
                           FontSize="16"
                           Foreground="#555"/>
                <TextBox x:Name="UserNameTextBox"
                         FontSize="16"
                         Margin="0 5 0 15"
                         Padding="6"
                         BorderBrush="#ccc"
                         BorderThickness="1"
                         Background="#fafafa"/>

                <TextBlock Text="Email:" 
                           FontWeight="SemiBold" 
                           FontSize="16"
                           Foreground="#555"/>
                <TextBox x:Name="EmailTextBox"
                         FontSize="16"
                         Margin="0 5 0 25"
                         Padding="6"
                         BorderBrush="#ccc"
                         BorderThickness="1"
                         Background="#fafafa"/>

                <StackPanel Orientation="Horizontal" Margin="0 0 20 20" HorizontalAlignment="Center">
                    <Button Content="Сменить пароль"
                            Width="140"
                            Height="36"
                            Background="#4A90E2"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0 0 10 0"
                            Click="ChangePassword_Click"/>

                    <Button Content="Сменить email"
                            Width="140"
                            Height="36"
                            Background="#4A90E2"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="ChangeEmail_Click"/>
                </StackPanel>

                <TextBlock x:Name="StatusTextBlock" 
                           Foreground="Green" 
                           FontWeight="SemiBold" 
                           Visibility="Collapsed" 
                           Margin="0 0 0 20"
                           Text="Изменения сохранены!"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Сохранить" 
                            Width="120"
                            Height="40"
                            Background="#4A90E2"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="SaveButton_Click"
                            Margin="0,0,15,0"/>
                    <Button Content="Назад"
                            Width="120"
                            Height="40"
                            Background="#888"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BackButton_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
